generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String   // Store the hashed password
  chats     Chat[]   // Relation to the Chat model (a user can have many chats)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id          Int        @id @default(autoincrement())
  userId      Int?      // Optional because bots don't have a userId
  user        User?     @relation(fields: [userId], references: [id])
  title       String
  responses   Response[] // Relation to the Response model (one chat can have many responses)
  createdAt   DateTime  @default(now())
}

model Response {
  id        Int        @id @default(autoincrement())
  chatId    Int       // Foreign key to the Chat model
  chat      Chat      @relation(fields: [chatId], references: [id])
  message   String     // The message content
  senderType SenderType // Can be 'USER' or 'BOT'
  createdAt DateTime   @default(now())
}

enum SenderType {
  USER
  BOT
}